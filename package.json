{
  "name": "wp-boiler-plate",
  "version": "0.210302.2",
  "description": "boiler-plate to develop WP theme",
  "author": "KOBAYASHI atsushi",
  "homepage": "https://github.com/kobaatsu/wp-boiler-plate",
  "scripts": {
    "dev": "docker-compose up -d && watch",
    "plugin": "npx gulp installPlugins",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "stylus src/asset/css/style.styl -o ./dev/asset/css  --include-css --sourcemap --watch",
    "watch:php": "pug src/**/*.pug -o ./dev/ --watch -P -E php",
    "watch:image": "cpx 'src/asset/image/**/*.*' dev/asset/image --watch",
    "watch:js": "esbuild src/asset/js/main.js --bundle --outfile=dev/asset/js/main.js --sourcemap --watch",
    "build": "npm-run-all --parallel build:*",
    "build:css": "stylus src/asset/css/style.styl -o ./dev/asset/css --include-css && postcss dev/asset/css/style.css --use autoprefixer postcss-sort-media-queries cssnano -d dist/asset/css/ --no-map",
    "build:php": "pug src/*.pug -o ./dist/ -E php",
    "build:image": "node ./task/imagemin.js src/asset/image dist/asset/image",
    "build:js": "esbuild src/asset/js/main.js --bundle --outfile=dist/asset/js/main.js --minify",
    "up": "docker-compose up",
    "stop": "docker-compose stop",
    "down": "docker-compose down",
    "cli": "docker-compose run --rm cli bash",
    "lint": "eslint --fix src/asset/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kobaatsu/wp-boiler-plate.git"
  },
  "lint-staged": {
    "*.{js}": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "commander": "^2.20.3",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "decompress": "^4.2.1",
    "del": "^6.0.0",
    "download": "^8.0.0",
    "esbuild": "^0.8.54",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^5.1.3",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "js-yaml": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-sort-media-queries": "^3.4.3",
    "prettier": "^2.2.1",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.8"
  }
}
